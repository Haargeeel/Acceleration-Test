<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivityFragment">

    <TextView android:text="x" android:layout_width="wrap_content"
        android:id="@+id/xLabel"
        android:paddingRight="20dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/xResult"
        android:layout_toRightOf="@id/xLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ProgressBar
        android:id="@+id/xProgress"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_below="@id/xLabel"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <TextView android:text="y" android:layout_width="wrap_content"
        android:id="@+id/yLabel"
        android:paddingRight="20dp"
        android:layout_below="@id/xProgress"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/yResult"
        android:layout_below="@id/xProgress"
        android:layout_toRightOf="@id/yLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ProgressBar
        android:id="@+id/yProgress"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_below="@id/yLabel"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <TextView android:text="z" android:layout_width="wrap_content"
        android:id="@+id/zLabel"
        android:paddingRight="20dp"
        android:layout_below="@id/yProgress"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/zResult"
        android:layout_below="@id/yProgress"
        android:layout_toRightOf="@id/zLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ProgressBar
        android:id="@+id/zProgress"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_below="@id/zLabel"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/resultLabel"
        android:text="Result"
        android:paddingRight="20dp"
        android:layout_below="@id/zProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/result"
        android:layout_below="@id/zProgress"
        android:layout_toRightOf="@id/resultLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ProgressBar
        android:id="@+id/resultProgress"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_below="@id/resultLabel"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <Button
        android:id="@+id/startButton"
        android:layout_below="@id/resultProgress"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:text="Start"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/route"
        android:layout_below="@id/startButton"
        android:text="Location: /storage/emulated/0/EMA"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
